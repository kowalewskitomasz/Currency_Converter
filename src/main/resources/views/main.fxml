<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.131"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
    <Label alignment="CENTER_RIGHT" text="Menu" textAlignment="CENTER">
        <font>
            <Font name="Open Sans" size="36.0"/>
        </font>
    </Label>

    <Button fx:id="calculatorButton" onAction="#calculatorButtonClicked" text="Calculator">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <font>
            <Font name="Open Sans" size="14.0"/>
        </font>
    </Button>

    <Button fx:id="exchangeButton" onAction="#exchangeButtonClicked" text="Exchange Rates">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <font>
            <Font name="Open Sans" size="14.0"/>
        </font>
    </Button>
</VBox>
